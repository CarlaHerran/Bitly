<h1>Bienvenido a BITLY!</h1>

<% if @url && @url.errors.messages %>
  <div class="alert alert-danger" role="alert">No se pudo crear tu URL: <%= @url.long_url %></div>
<% elsif @url %>
  <div class="alert alert-success" role="alert">Url creada correctamente: <a href="/<%= @url.short_url %>"><%= @url.short_url %></a></div>
<% end %>

<!-- Formulario para recibir una URL del usuario -->
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <form method='POST' action="/urls">
      <div class="form-group">
        <label for="url">Ingresa una URL:</label>
        <input type="text" class="form-control" id="url" name="url">
      </div>
      <div class="form-group">
        <input type="submit" value="Convertir URL" class="btn btn-lg btn-block btn-warning">
      </div>
    </form>
  </div>
</div>
  
<!-- Lista de todas las URLs que se han creado en la aplicaciÃ³n -->
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <th>Url Original</th>
        <th>Url Corta</th>
        <th>Clicks</th>
      </thead>
      <tbody>
        <% @urls.each do |url| %>
          <tr>
            <td><a href="<%= url.long_url %>" target='_blank'><%= url.long_url %></a></td>
            <td><a href="/<%= url.short_url %>" target='_blank'><%= url.short_url %></a></td>
            <td><%= url.click_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>